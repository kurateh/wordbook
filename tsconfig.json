{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "eslint.config.mjs",
    "nativewind-env.d.ts",
    ".storybook/**/*.ts*",
    "src/shared/style/sv/index.js"
  ],
  "exclude": ["app-example", ".storybook/storybook.requires.ts"]
}
